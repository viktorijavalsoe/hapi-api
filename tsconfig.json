{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true, 
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": false,
    "skipLibCheck": true,
    "baseUrl": "./src",
    //enable json import
    "resolveJsonModule": true,
    "lib": [
      "es2015"
  ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
